<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountProfile"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:onClick="logoutUser"
        android:padding="12dp"
        android:text="SignOut"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="53dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="504dp" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:padding="12dp"
        android:text="confirm"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:layout_conversion_absoluteHeight="53dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="447dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Bio"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/newshapecolor"
        android:fontFamily="@font/opensansregular"
        android:gravity="left"
        android:hint="Bio"
        android:inputType="textLongMessage"
        android:padding="12dp"
        android:textColorHint="@android:color/black"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="46dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/opensansbold"
        android:text="Phone Number:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/Phone"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="25dp"
        tools:layout_conversion_absoluteWidth="140dp"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/newshapecolor"
        android:fontFamily="@font/opensansregular"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="12dp"
        android:textColorHint="@android:color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="46dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/opensansbold"
        android:text="Bio:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/Bio"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="25dp"
        tools:layout_conversion_absoluteWidth="34dp"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/name3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/newshapecolor"
        android:fontFamily="@font/opensansregular"
        android:hint="Name"
        android:padding="12dp"
        android:textColorHint="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/pfp"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="46dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteY="55dp" />

    <ImageView
        android:id="@+id/pfp"
        android:layout_width="126dp"
        android:layout_height="114dp"
        android:src="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_conversion_absoluteWidth="100dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:text="Age:"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="25dp"
        tools:layout_conversion_absoluteWidth="38dp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="115dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/newshapecolor"
        android:fontFamily="@font/opensansregular"
        android:hint="Age"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="46dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/opensansbold"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/name3"
        app:layout_constraintStart_toEndOf="@+id/pfp"
        tools:layout_conversion_absoluteHeight="25dp"
        tools:layout_conversion_absoluteWidth="58dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:padding="12dp"
        android:text="<"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="53dp"
        tools:layout_conversion_absoluteWidth="350dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="-3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>